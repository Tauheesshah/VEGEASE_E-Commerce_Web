@{
    ViewBag.Title = "Profile";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            margin-top: 20px;
        }

        .menu {
            width: 250px;
            background-color: #f5f5f5;
            padding: 10px;
            border-right: 1px solid #ddd;
        }

            .menu a {
                display: block;
                padding: 15px;
                color: #333;
                text-decoration: none;
                border-bottom: 1px solid #ddd;
                font-weight: bold;
                transition: background-color 0.3s, color 0.3s;
            }

                .menu a:hover {
                    background-color: #e9ecef;
                    color: #28a745;
                }

                .menu a.active {
                    background-color: #e9ecef;
                    color: #28a745;
                }

                .menu a i {
                    margin-right: 10px;
                    vertical-align: middle;
                }

        .content {
            flex-grow: 1;
            padding: 20px;
        }

            .content h2 {
                margin-top: 0;
            }

        .profile-container {
            width: 80%;
            max-width: 800px;
            margin: 0px 40px 0px 77px;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        /* Heading */
        h2 {
            margin: 0;
            padding: 0;
            font-size: 24px;
            color: #333;
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        /* Profile Details */
        .profile-details {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        /* Profile Picture */
        .profile-picture {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .profile-picture img {
                border-radius: 50%;
                width: 100px;
                height: 100px;
                object-fit: cover;
                border: 2px solid #ddd;
                margin-bottom: 10px;
                padding: 17px;
            }

        #profile-picture-upload {
            margin-top: 10px;
        }

        /* Profile Info */
        .profile-info {
            flex: 1;
            padding-left: 50px;
        }

            .profile-info label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #555;
            }

            .profile-info input {
                width: 100%;
                padding: 10px;
                margin-bottom: 15px;
                border: 1px solid #ddd;
                border-radius: 4px;
                box-sizing: border-box;
            }

        #Edit-profile {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        #save-profile:hover {
            background-color: #218838;
        }

        /* Delete Account Button */
        #delete-account {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
        }

            #delete-account:hover {
                background-color: #c82333;
            }

        /* Address Section */
        .address-section {
            margin-top: 30px;
        }

            .address-section h3 {
                margin: 0;
                padding: 0;
                font-size: 20px;
                color: #333;
                border-bottom: 1px solid #eee;
                padding-bottom: 10px;
                margin-bottom: 20px;
            }

        #add-address {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            #add-address:hover {
                background-color: #0056b3;
            }

        /* Saved Addresses */
        #saved-addresses {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="menu">
            <a href="#" data-section="profile" class="active">
                <i class="bi bi-person-circle"></i> My Profile
            </a>
            <a href="#" data-section="wallet">
                <i class="bi bi-wallet2"></i> My Wallet
            </a>
          
            <a href="#" data-section="rewards">
                <i class="bi bi-trophy"></i> My Rewards
            </a>
            <a href="#" data-section="refer-earn">
                <i class="bi bi-share"></i> Refer & Earn
            </a>
      
            <a href="#" data-section="address">
                <i class="bi bi-geo-alt"></i> My Address
            </a>
            <a href="#" data-section="orders">
                <i class="bi bi-bag"></i> My Orders
            </a>
            <a href="#" data-section="returns">
                <i class="bi bi-arrow-return-left"></i> Return Requests
            </a>
            <a href="#" data-section="notification">
                <i class="bi bi-bell"></i> Notification
            </a>
            <a href="#" data-section="admin">
                <i class="bi bi-person-circle"></i> Admin
            </a>
        </div>
        <div class="content">
            <div class="profile-container">
                <h2>My Profile</h2>
                <div class="profile-details">
                    <div class="profile-picture">
                        <img src="default-profile.png" alt="Profile Picture">
                        <input type="file" id="profile-picture-upload">
                    </div>
                    <div class="profile-info">
                        <label>Name:</label>
                        <input type="text" id="name" placeholder="Enter your name">
                        <label>Email:</label>
                        <input type="email" id="email" placeholder="Enter your email">
                        <label>Phone:</label>
                        <input type="text" id="phone" placeholder="Enter your phone number">
                        <button id="Edit-profile">Edit Profile</button>
                    </div>
                </div>
                <button id="delete-account">Delete my VegEase account</button>

                <div class="address-section">
                    <h3>Delivery Address</h3>
                    <button id="add-address">+ Add New Address</button>
                    <div id="saved-addresses">
                        <!-- Dynamically added addresses will appear here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.menu a').on('click', function (e) {
                e.preventDefault();

                var section = $(this).data('section');

                // Remove 'active' class from all menu items and add it to the clicked item
                $('.menu a').removeClass('active');
                $(this).addClass('active');

                // Load content via AJAX
                $.ajax({
                    url: '@Url.Action("LoadContent", "Profile")',
                    type: 'GET',
                    data: { section: section },
                    success: function (result) {
                        $('.content').html(result);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error loading content:', error);
                        $('.content').html('<p>An error occurred while loading the content.</p>');
                    }
                });
            });
        });
    </script>
</body>
</html>
